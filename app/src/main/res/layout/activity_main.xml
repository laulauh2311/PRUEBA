<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8ECE8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:fontFamily="casual"
        android:gravity="center|center_vertical"
        android:text="PIDE TU CITA"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1FC5B6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1FC5B6"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="Cita para    :" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C8ECE8"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:hint="Introduzca su nombre y apellido"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1FC5B6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1FC5B6"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text=" Lugar        :" />

        <AutoCompleteTextView
            android:id="@+id/txtLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C8ECE8"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:hint="Escriba el nombre del lugar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1FC5B6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1FC5B6"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="Especialidad :" />

        <AutoCompleteTextView
            android:id="@+id/Esp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C8ECE8"
            android:fontFamily="casual"
            android:gravity="center"
            android:hint="Escriba la especialidad" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8ECE8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1FC5B6"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="Doctores     :" />

        <Spinner
            android:id="@+id/spinner11"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:background="#C8ECE8"
            android:fontFamily="casual"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:text="Fecha y Hora de la cita:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8ECE8"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="157dp"
            android:layout_gravity="center|center_horizontal"
            android:calendarViewShown="false"
            android:spinnersShown="false" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:timePickerMode="spinner" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:fontFamily="casual"
        android:onClick="onClick"
        android:text="Registrar cita"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8ECE8"
        android:fontFamily="casual"
        android:gravity="center|center_vertical"
        android:text="Gracias por contar con nuestros servicios!"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>